<div class="container">
  <div class="row">
    <div class ="col-sm-6 col-sm-offset-3">
      <h1>Publicar Album</h1>	
        <%= form_for @album do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del Album" %>
          </div>
          <div class="form-group">
          	<%= f.url_field :image_url, class: "form-control input-lg", placeholder: "Igresa la URL de la imagen del Album"%>
          </div>
          <div>

          <div class="form-group">
            <%= f.label :birth_date , "Fecha de Lanzamiento" %> 
            <%= f.date_field :released_at, class: "form-control" %>
          </div>

          	<%= f.submit "Publicar Album", class: "btn btn-primary btn-lg btn-block"%>
          </div>
        <% end %>
    </div>
  </div>
</div>